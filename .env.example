# AsTrade Backend Environment Configuration
# Copy this file to .env and update the values

# Application Settings
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-this-in-production
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Extended Exchange API Configuration
EXTENDED_ENVIRONMENT=testnet  # testnet or mainnet
EXTENDED_API_KEY=your-extended-api-key-here
EXTENDED_SECRET_KEY=your-extended-secret-key-here
EXTENDED_STARK_PRIVATE_KEY=your-stark-private-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/astrade

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Docker Compose Environment Variables
POSTGRES_DB=astrade
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
REDIS_PASSWORD=
